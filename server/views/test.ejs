<html>
    <head>
            <title>Web TDAR Test</title>

            <script type="text/javascript" src="https://cdn.bootcss.com/jquery/2.1.1/jquery.min.js"></script> 
            <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css"> 

            <!-- 新 Bootstrap 核心 CSS 文件 --> 
            <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"> 
            <!-- 最新的 Bootstrap 核心 JavaScript 文件 --> 
            <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script> 

            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.9/semantic.min.css"/>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.9/semantic.min.js"></script>

            <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">


            <script>
                $(function(){
                    width = $(window).width()
                    height = $(window).height()
                    
                    // 經過實驗，將 width().height() 先寫在前面先發動，才不會當機
                    $("#if1").width(width*0.49).height((height)).offset({top:0,left:0});
                    $("#if2").width(width*0.49).height((height)).offset({top:0,left:(width/2)});
                    //$("#if3").width(width*0.49).height((height/2)).offset({top:(height/2),left:0});
                    //$("#if4").width(width*0.49).height((height/2)).offset({top:(height/2),left:(width/2)});



                })
            </script>
    </head>
    
    <body>
        <iframe id="if1" src="/login?test=a"></iframe>
        <iframe id="if2" src="/login?test=b"></iframe>
